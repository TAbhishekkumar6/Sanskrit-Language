{
  "name": "samskrit",
  "version": "0.1.0",
  "description": "A Sanskrit-based programming language for web, Android, and iOS development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "samskrit": "./dist/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "security:audit": "npm audit",
    "repl": "ts-node src/repl.ts",
    "docs": "typedoc src/",
    "bundle": "webpack --config webpack.config.js",
    "bundle:watch": "webpack --config webpack.config.js --watch",
    "lsp:start": "ts-node src/lsp/server.ts",
    "sourcemap": "tsc --sourceMap",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "benchmark": "ts-node src/benchmark/index.ts",
    "generate-ast": "ts-node src/tools/ast-generator.ts",
    "validate": "npm run type-check && npm run lint && npm run test",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "release:preview": "npm version prerelease --preid=preview && git push && git push --tags",
    "release:beta": "npm version prerelease --preid=beta && git push && git push --tags"
  },
  "keywords": [
    "sanskrit",
    "programming-language",
    "compiler",
    "transpiler",
    "web",
    "android",
    "ios"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "buffer": "^6.0.3",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "crypto-browserify": "^3.12.1",
    "debug": "^4.3.4",
    "error-stack-parser": "^2.1.4",
    "isolated-vm": "^5.0.4",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "path-browserify": "^1.0.1",
    "source-map-support": "^0.5.21",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.5.2",
    "vm-browserify": "^1.1.2",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.12",
    "webpack": "^5.98.0",
    "z3-solver": "^4.14.1"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.3",
    "@types/chai": "^5.2.0",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.19.81",
    "@types/node-forge": "^1.3.11",
    "@types/source-map-support": "^0.5.7",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "benchmark": "^2.1.4",
    "chai": "^5.2.0",
    "eslint": "^8.40.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "snyk": "^1.1134.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  }
}
