// संस्कृत भाषा वर्धित उदाहरण
// Example demonstrating improved Sanskrit syntax features

// Example 1: Default parameters (Devanagari)
कार्य योग(अ: पूर्णांक = 10, ब: पूर्णांक = 20) -> पूर्णांक {
    प्रतिदा अ + ब;
}

// Example 2: Default parameters (Romanized)
karya jod(a: purnanank = 5, b: purnanank = 10) -> purnanank {
    pratida a + b;
}

// Example 3: Symbolic operators
कार्य तुलना(अ: पूर्णांक, ब: पूर्णांक) -> सत्य {
    यदि (अ > ब) {
        प्रतिदा सत्य;
    } अन्यथा यदि (अ < ब) {
        प्रतिदा असत्य;
    } अन्यथा {
        प्रतिदा अ >= ब && अ <= ब;
    }
}

// Example 4: String interpolation with template literals
कार्य अभिवादन(नाम: पाठ्य, आयु: पूर्णांक = 25) -> पाठ्य {
    प्रतिदा `नमस्ते ${नाम}! आपकी उम्र ${आयु} वर्ष है।`;
}

// Example 5: Pattern matching
कार्य वर्णन(वस्तु: कोई) -> पाठ्य {
    प्रतिदा मिलान(वस्तु) {
        प्रतिरूप पूर्णांक: प्रतिदा "यह एक पूर्णांक है";
        प्रतिरूप "नमस्ते": प्रतिदा "यह एक अभिवादन है";
        प्रतिरूप पाठ्य: प्रतिदा "यह एक पाठ्य है";
        प्रतिरूप [#सूची]: प्रतिदा `यह एक सूची है जिसमें ${सूची.लम्बाई} तत्व हैं`;
        प्रतिरूप { नाम }: प्रतिदा `यह एक वस्तु है जिसका नाम ${नाम} है`;
        प्रतिरूप _: प्रतिदा "यह कुछ और है";
    };
}

// Example 6: All features combined in one function
कार्य सबकुछ(नाम: पाठ्य = "अमर", आयु: पूर्णांक = 30, वस्तुएँ: सूची = [1, 2, 3]) -> वस्तु {
    चल परिणाम: वस्तु = {
        संदेश: `नमस्ते ${नाम}, आपकी उम्र ${आयु} वर्ष है।`,
        आयुवर्ग: मिलान(आयु) {
            प्रतिरूप आयु < 18: प्रतिदा "बच्चा";
            प्रतिरूप आयु >= 18 && आयु < 60: प्रतिदा "वयस्क";
            प्रतिरूप _: प्रतिदा "वरिष्ठ";
        },
        वस्तुओंकीसंख्या: वस्तुएँ.लम्बाई
    };
    
    प्रतिदा परिणाम;
} 